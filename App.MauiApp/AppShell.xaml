<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ForgottenToDoApp.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ForgottenToDoApp.MauiApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Dashboard"
            Icon="dashboard_icon.png">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="DashboardPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Mis Tareas"
            Icon="tasks_icon.png">
        <ShellContent
            Title="Todas las Tareas"
            ContentTemplate="{DataTemplate local:TaskListPage}"
            Route="TaskListPage"/>
    </FlyoutItem>

</Shell>